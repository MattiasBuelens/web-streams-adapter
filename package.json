{
  "name": "@mattiasbuelens/web-streams-adapter",
  "version": "0.1.0-alpha.1",
  "description": "Adapters for converting between different implementations of WHATWG Streams",
  "main": "dist/web-streams-adapter.js",
  "module": "dist/web-streams-adapter.mjs",
  "types": "types/index.d.ts",
  "files": [
    "dist/",
    "types/"
  ],
  "scripts": {
    "build-bundle": "rollup -c",
    "build-types": "tsc -p ./src/tsconfig.json --emitDeclarationOnly --declaration --declarationDir ./types",
    "build": "npm run build-bundle && npm run build-types",
    "test": "cd test && ts-node --expose_gc --project tsconfig.json run-web-platform-tests.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MattiasBuelens/web-streams-adapter.git"
  },
  "author": "Mattias Buelens <mattias@buelens.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MattiasBuelens/web-streams-adapter/issues"
  },
  "homepage": "https://github.com/MattiasBuelens/web-streams-adapter#readme",
  "dependencies": {
    "@types/whatwg-streams": "0.0.5"
  },
  "devDependencies": {
    "@mattiasbuelens/web-streams-polyfill": "^0.1.0-alpha.4",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^9.6.7",
    "minimatch": "^3.0.4",
    "rollup": "^0.58.2",
    "rollup-plugin-typescript2": "^0.13.0",
    "ts-node": "^6.0.1",
    "typescript": "^2.8.3",
    "wpt-runner": "^2.4.0"
  }
}
